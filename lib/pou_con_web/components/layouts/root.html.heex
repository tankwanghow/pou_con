<!DOCTYPE html>
<html lang="en">
  <head>
    <script>
      (function() {
        const theme = localStorage.getItem("pou_con_theme") || "system";
        const resolved = theme === "system"
          ? (window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light")
          : theme;
        document.documentElement.setAttribute("data-theme", resolved);
      })();
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    <.live_title default="PouCon" suffix=" · Phoenix Framework">
      {assigns[:page_title]}
    </.live_title>
    <link phx-track-static rel="stylesheet" href={~p"/assets/css/app.css"} />
    <script defer phx-track-static type="text/javascript" src={~p"/assets/js/app.js"}>
    </script>
  </head>

  <body class="mb-5 bg-base-100 text-base-content">
    <!-- Header with House ID + Live Local Time -->
    <div class="flex flex-col items-center mt-2 mb-2">
      <!-- House ID (links to dashboard) -->
      <a
        href="/dashboard"
        class="inline-block font-mono font-bold text-4xl border-4 border-primary/50 rounded-xl bg-primary text-primary-content px-2 py-1 shadow-md hover:bg-primary/80 transition-colors"
      >
        {PouCon.Auth.get_house_id()}
      </a>
      
<!-- Live Local Time (updates every second) -->
      <div
        :if={assigns[:current_role]}
        class={[
          "flex mt-1 px-3 py-1 rounded-lg font-semibold items-center",
          if(assigns[:system_time_valid] == false,
            do: "bg-red-600 text-white border-2 border-red-800",
            else: "bg-base-200 border-2 border-base-content"
          )
        ]}
      >
        <span :if={assigns[:system_time_valid] == false} class="text-2xl">⚠️</span>
        <div class="font-mono">
          <div
            id="local-clock"
            data-timezone={PouCon.Auth.get_timezone()}
            data-time-valid={assigns[:system_time_valid] != false}
          >
            Loading time...
          </div>
          <div
            :if={assigns[:system_time_valid] == false}
            class="text-center font-normal text-amber-200"
          >
            !! System Time Error !!
            <.link href="/admin/system_time" class="text-blue-400">
              Try Fix...
            </.link>
          </div>
        </div>

        <span :if={assigns[:system_time_valid] == false} class="text-2xl">⚠️</span>
      </div>
    </div>

    {@inner_content}

    <div class="simple-keyboard"></div>
    
<!-- Keyboard toggle button (bottom-right corner) - cycles through Auto/Show/Hide modes -->
    <button
      id="keyboard-toggle"
      type="button"
      class="fixed bottom-4 right-4 z-50 w-14 h-12 bg-blue-600 hover:bg-blue-700 text-white rounded-full shadow-lg flex items-center justify-center text-lg font-bold transition-colors"
      title="Auto (click to change)"
    >
      ⌨A
    </button>
    
<!-- Live clock script – respects the farm's timezone -->
    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const clockEl = document.getElementById("local-clock");
        if (!clockEl) return;

        const timezone = clockEl.dataset.timezone || "UTC";
        const timeValid = clockEl.dataset.timeValid !== "false";

        const updateClock = () => {
          const now = new Date();
          const options = {
            timeZone: timezone,
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            hour12: false,
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
          };

          const formatter = new Intl.DateTimeFormat('en-GB', options);
          const parts = formatter.formatToParts(now);

          const date = `${parts.find(p => p.type === 'day').value}/${parts.find(p => p.type === 'month').value}/${parts.find(p => p.type === 'year').value}`;
          const time = `${parts.find(p => p.type === 'hour').value}:${parts.find(p => p.type === 'minute').value}:${parts.find(p => p.type === 'second').value}`;

          // Add warning emoji and message if time is invalid
          const warningIcon = timeValid ? '' : '⚠️ ';
          const invalidSuffix = timeValid ? '' : ' [INVALID - FIX TIME]';

          clockEl.textContent = `${warningIcon}${date} ${time} (${timezone.replace('_', ' ')})${invalidSuffix}`;
          };

        updateClock();
        setInterval(updateClock, 1000);
      });
    </script>
  </body>
</html>
