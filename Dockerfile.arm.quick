# Quick Dockerfile for ARM builds â€” app-only changes
# Skips downloading runtime debs (chromium, swayidle, etc.)
# Use this when only PouCon application code has changed
#
# For full builds with debs, use Dockerfile.arm

FROM hexpm/elixir:1.19.5-erlang-28.3.1-debian-bookworm-20260112-slim AS builder

# Install build dependencies only (no runtime deb downloads)
RUN apt-get update -y && apt-get install -y \
    build-essential \
    git \
    curl \
    sqlite3 \
    libsqlite3-dev \
    ca-certificates \
    && apt-get clean && rm -f /var/lib/apt/lists/*_*

# Prepare build dir
WORKDIR /app

# Install hex + rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Set build ENV
ENV MIX_ENV=prod

# Install mix dependencies (cached if mix.exs/mix.lock unchanged)
COPY mix.exs mix.lock ./
RUN HEX_HTTP_CONCURRENCY=4 HEX_HTTP_TIMEOUT=120 mix deps.get --only prod
RUN mkdir config

# Copy snap7-iot-arm source for ARM64 support
COPY snap7-iot-arm-1.4.2.tar.gz /tmp/

# Replace snap7 source in snapex7 with ARM-compatible version
RUN cd /tmp && \
    tar -xzf snap7-iot-arm-1.4.2.tar.gz && \
    rm -rf /app/deps/snapex7/src/snap7 && \
    mkdir -p /app/deps/snapex7/src/snap7 && \
    cp -r snap7-iot-arm-1.4.2/src /app/deps/snapex7/src/snap7/ && \
    cp -r snap7-iot-arm-1.4.2/build /app/deps/snapex7/src/snap7/ && \
    cp -r snap7-iot-arm-1.4.2/examples /app/deps/snapex7/src/snap7/ && \
    rm -rf /tmp/snap7-iot-arm-1.4.2*

# Patch snapex7 Makefile to support aarch64 (ARM64)
RUN sed -i 's/x86_64 i386))/x86_64 i386 aarch64 arm64))/g' \
    /app/deps/snapex7/src/Makefile

# Copy compile-time config files before we compile dependencies
COPY config/config.exs config/prod.exs config/
RUN mix deps.compile --force

# Copy application code
COPY priv priv
COPY lib lib
COPY assets assets
COPY docs docs

# Ensure vendor binaries are executable
RUN chmod +x assets/vendor/bin/* 2>/dev/null || true

# Compile assets and application
RUN mix assets.deploy
RUN mix compile

# Build release
COPY config/runtime.exs config/
RUN mix release

# Extract release for easier copying
RUN cd /app/_build/prod/rel/pou_con && \
    tar -czf /pou_con_release_arm.tar.gz .

# Final stage - release tarball only (no debs)
FROM scratch AS export
COPY --from=builder /pou_con_release_arm.tar.gz /
